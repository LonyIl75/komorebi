{
  "compilerOptions":{
    "baseUrl": "./",
    "noErrorTruncation": true,
    "paths": {
      "@/*": ["./src/*"],
      "@test/*": ["./test/*"],
      "@shared/*": ["./shared/*"],
      "@config/*": ["./src/config/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@routes": ["./src/routes/*"],
      "@database" : ["./src/database/*"],
      "@scraping" : ["./src/utils/scraping/*"],
    },
    
      "module":"NodeNext",
      "moduleResolution": "NodeNext",
      "target":"ES2021",
      "sourceMap": true,
      "outDir": "./dist",
      "skipLibCheck": true,
      
  },
  "include":["src/**/*","test/**/*", "shared/**/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}